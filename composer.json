{
    "name": "yassi/nova-nested-form",
    "description": "A Laravel Nova package that allows you to create/update/delete nested related fields from a parent form.",
    "keywords": [
        "laravel",
        "nova",
        "nested",
        "relationship",
        "form"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1.0"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://nova.laravel.com"
    }],
    "autoload": {
        "psr-4": {
            "Yassi\\NestedForm\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Yassi\\NestedForm\\FieldServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yassi\\NestedForm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "epartment/nova-dependency-container": "^1.1",
        "laravel/framework": "^5.7",
        "laravel/nova": "^1.2",
        "orchestra/testbench": "^3.7",
        "phpunit/phpunit": "^7.0.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --verbose"
    }
}